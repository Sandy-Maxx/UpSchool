# Staging Environment Configuration for Multi-Tenant School ERP Platform

# Environment
ENVIRONMENT=staging
DEBUG=False

# Security
SECRET_KEY=staging-secret-key-change-this-for-production
ALLOWED_HOSTS=localhost,127.0.0.1,staging.localhost,*.staging.localhost

# Database Configuration (using PostgreSQL for staging)
DATABASE_URL=postgresql://school_erp_user:staging_password@db:5432/school_erp_staging

# Redis Configuration  
REDIS_URL=redis://redis:6379/0

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8000

# Email Configuration (staging)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=staging@schoolerp.test
EMAIL_HOST_PASSWORD=staging-email-password

# Database Credentials for Staging
DB_NAME=school_erp_staging
DB_USER=school_erp_user
DB_PASSWORD=staging_password
DB_HOST=db
DB_PORT=5432

# Monitoring & Logging
LOG_LEVEL=INFO

# SSL/TLS (disabled for staging)
USE_TLS=False
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Grafana (staging)
GRAFANA_ADMIN_PASSWORD=staging_grafana_admin

# Rate Limiting (relaxed for testing)
ENABLE_RATE_LIMITING=True
RATE_LIMIT_AUTHENTICATED=2000/hour
RATE_LIMIT_ANONYMOUS=200/hour

# Performance
CACHE_TIMEOUT=1800
SESSION_CACHE_TIMEOUT=43200

# Feature Flags
ENABLE_API_DOCUMENTATION=True
ENABLE_ADMIN_INTERFACE=True
ENABLE_DEBUG_TOOLBAR=True

# Staging-specific settings
STAGING_MODE=True
TEST_DATA_ENABLED=True
