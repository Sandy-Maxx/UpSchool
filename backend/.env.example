# Django Configuration
SECRET_KEY=your-secret-key-here
DEBUG=True
DJANGO_SETTINGS_MODULE=school_platform.settings.development

# Database Configuration
DB_NAME=school_platform
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_HOST=localhost
DB_PORT=5432

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@yourschool.com
SUPPORT_EMAIL=support@yourschool.com

# SaaS Platform Configuration
MAIN_DOMAIN=schoolerp.com
PLATFORM_NAME=SchoolERP

# AWS S3 Configuration (for file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=us-east-1

# Monitoring (optional)
SENTRY_DSN=your-sentry-dsn

# Security (production only)
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
