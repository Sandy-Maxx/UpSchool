# Production Environment Configuration for Multi-Tenant School ERP Platform

# Environment
ENVIRONMENT=production
DEBUG=False

# Security
SECRET_KEY=your-super-secure-secret-key-here-change-in-production
ALLOWED_HOSTS=api.schoolerp.com,*.schoolerp.com,localhost

# Database Configuration
DATABASE_URL=postgresql://school_erp_user:secure_password@db:5432/school_erp_prod

# Redis Configuration  
REDIS_URL=redis://redis:6379/0

# CORS Settings
CORS_ALLOWED_ORIGINS=https://app.schoolerp.com,https://admin.schoolerp.com,https://www.schoolerp.com

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=noreply@schoolerp.com
EMAIL_HOST_PASSWORD=your-email-password

# AWS Configuration (for S3 storage, backups, etc.)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=schoolerp-production-media
AWS_S3_REGION_NAME=us-east-1
USE_S3=True

# Database Credentials
DB_NAME=school_erp_prod
DB_USER=school_erp_user
DB_PASSWORD=secure_database_password
DB_HOST=db
DB_PORT=5432

# Monitoring & Logging
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
LOG_LEVEL=INFO

# SSL/TLS
USE_TLS=True
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# Grafana
GRAFANA_ADMIN_PASSWORD=secure_grafana_password

# Backup Configuration
BACKUP_S3_BUCKET=schoolerp-backups

# Rate Limiting
ENABLE_RATE_LIMITING=True
RATE_LIMIT_AUTHENTICATED=1000/hour
RATE_LIMIT_ANONYMOUS=100/hour

# Performance
CACHE_TIMEOUT=3600
SESSION_CACHE_TIMEOUT=86400

# Feature Flags
ENABLE_API_DOCUMENTATION=True
ENABLE_ADMIN_INTERFACE=True
ENABLE_DEBUG_TOOLBAR=False

# External Integrations
PAYMENT_GATEWAY_KEY=your-payment-gateway-key
SMS_PROVIDER_KEY=your-sms-provider-key
