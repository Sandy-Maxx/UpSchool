# Development Environment Configuration
REACT_APP_ENV=development

# API Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_SAAS_API_URL=http://localhost:8000/api/v1/public
REACT_APP_TENANT_API_URL=http://localhost:8000/api/v1

# Authentication
REACT_APP_JWT_SECRET=dev-jwt-secret
REACT_APP_SESSION_TIMEOUT=3600000

# SaaS Portal Configuration
REACT_APP_SAAS_DOMAIN=localhost:3000
REACT_APP_TENANT_SUBDOMAIN_PATTERN=*.localhost:3000

# Feature Flags
REACT_APP_ENABLE_DEBUG=true
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_SENTRY=false

# Development Tools
REACT_APP_REDUX_DEVTOOLS=true
REACT_APP_HOT_RELOAD=true

# Performance
GENERATE_SOURCEMAP=true
INLINE_RUNTIME_CHUNK=false

# Disable ESLint overlay in development for better UX
ESLINT_NO_DEV_ERRORS=true
TSC_COMPILE_ON_ERROR=true
