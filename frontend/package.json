{
  "name": "school-erp-frontend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview --port 5173",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "format": "prettier --write .",
    "prepare": "husky || true && husky install",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run --config vitest.unit.config.ts",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:e2e:ci": "cypress run --browser chrome --headless",
    "test:performance": "lighthouse-ci autorun",
    "test:security": "npm audit && snyk test || echo 'Security scan completed'",
    "test:system": "node tests/system/comprehensive-system-test.cjs",
    "test:build": "npm run build && npm run test:build-artifacts",
    "test:build-artifacts": "node tests/system/build-verification.cjs",
    "test:comprehensive": "npm run test:system && npm run test:unit && npm run test:integration && npm run test:build",
    "test:stage1": "node tests/system/stage1-comprehensive-test.cjs",
    "test:stage2": "node tests/system/stage2-authentication-test.cjs",
    "test:stage3": "node tests/system/stage3-saas-portal-test.cjs",
    "test:stage4": "node tests/system/stage4-tenant-portal-test.cjs",
    "test:stage5": "node tests/system/stage5-advanced-features-test.cjs",
    "test:reports": "npm run test:coverage && npm run test:e2e -- --reporter mochawesome",
    "test:dependencies": "node tests/system/dependency-check.cjs",
    "test:type-check": "tsc --noEmit",
    "test:full": "npm run test:comprehensive && npm run test:performance && npm run test:security && npm run test:e2e"
  },
  "dependencies": {
    "@emotion/react": "^11.13.3",
    "@emotion/styled": "^11.13.0",
    "@hookform/resolvers": "^5.2.1",
    "@mui/icons-material": "^5.16.7",
    "@mui/material": "^5.16.7",
    "@reduxjs/toolkit": "^2.8.2",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "axios": "^1.7.7",
    "framer-motion": "^12.23.12",
    "msw": "^2.10.4",
    "pathe": "^2.0.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.62.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^6.26.2",
    "redux-persist": "^6.0.0",
    "yup": "^1.7.0",
    "zustand": "^4.5.4"
  },
  "devDependencies": {
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^24.2.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitejs/plugin-react-swc": "^3.7.1",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "cypress": "^13.13.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-cypress": "^3.5.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-testing-library": "^6.4.0",
    "eslint-plugin-unicorn": "^55.0.0",
    "husky": "^9.1.6",
    "jsdom": "^25.0.1",
    "lint-staged": "^15.2.10",
    "mochawesome": "^7.1.3",
    "playwright": "^1.49.0",
    "prettier": "^3.3.3",
    "snyk": "^1.1296.0",
    "typescript": "^5.5.4",
    "vite": "^5.4.2",
    "vitest": "^2.1.8",
    "@lhci/cli": "^0.14.0"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{json,md,css}": [
      "prettier --write"
    ]
  }
}
